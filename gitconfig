[alias]
  a = add
  # amend last commit
  amend   = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  # delete a branch
  brdel   = branch -D
  # shallow clone
  clsh    = clone --depth 1
  # cherry pick
  cp      = cherry-pick
  # commit with diff
  c       = commit --verbose
  ca      = commit --all --verbose
  # checkout
  co      = checkout
  # diff for last commit
  dlc     = diff --cached HEAD^
  dup     = !git fetch upstream && git diff upstream/master --
  # find a file path
  find    = "!git ls-files | grep -i"
  # grep codebase
  grep    = grep -Ii
  # short log
  l       = log --graph --decorate --oneline
  # last tag
  lasttag = describe --tags --abbrev=0
  # full log
  ll      = log --graph --decorate --stat
  lp      = log --graph --decorate --stat --cc -p
  # list all configured aliases
  lsali   = !git config --list | grep '^alias' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  ps      = push
  # reset
  r       = reset
  r1      = reset HEAD^
  r2      = reset HEAD^^
  rh      = reset --hard
  rh1     = reset HEAD^ --hard
  rh2     = reset HEAD^^ --hard
  # status
  s       = status
  # status with untracked files
  su      = status --untracked-files
  # update submodule
  subup   = submodule update --init
  # list tags
  tags    = tag -l
  # undo add
  unadd   = reset HEAD
  # Start a new local repository and perform initial commit
  this    = !git init && git add . && git commit -m \"Initial commit\"

[color]
  ui = true

[color "status"]
  added = yellow
  changed = green
  untracked = red

[core]
  autocrlf = false
  compression = 9
  excludesfile = ~/dotfiles/gitignore_global

[diff]
  mnemonicprefix = true

[push]
  default = simple

#[https]
#  proxy = 'socks5://127.0.0.1:9080'
[http]
  lowSpeedTime = 900

[url "https://bitbucket.org/"]
  insteadOf = bb:
[url "https://github.com/"]
  insteadOf = gh:
[url "https://gist.github.com/"]
  insteadOf = gist:

[user]
  email = donat@opmbx.org
  name = donat-b
[github]
  user = donat-b
