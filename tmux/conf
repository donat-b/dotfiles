set default-term screen-256color
# History
set-option -g history-limit 15000
# Start numbering at 1
set -g base-index 1
set -g pane-base-index 1
# Faster command sequence
set -s escape-time 0
set-option -g repeat-time 205
# Rebind profix to Ctrl-A
set-option -g prefix C-a
bind-key C-a send-prefix
unbind C-b
# Last active window
#bind-key C-a last-window
# Open man
bind-key m command-prompt "split-window 'exec man %%'"
# Root
bind-key R split-window 'exec sudo -s'
# Reload config
bind-key r source-file ~/.tmux.conf \; display-message 'configuration reloaded'
# Copy-paste
bind P paste-buffer
# Vi-like selection and yank
bind-key -t vi-copy 'v' begin-selection
bind-key -t vi-copy 'y' copy-selection
# Switching windows
bind-key -n 'M-,' previous-window
bind-key -n 'M-.' next-window
unbind p
unbind n
# scrolling
bind -t emacs-copy -n 'x' page-up
bind -t emacs-copy -n 'j' page-down

# Aggressive resize
setw -g aggressive-resize on
# Status line style
set -g status-utf8 on
set -g status-style 'bg=black'
set -ag status-style 'fg=cyan,bold'
set-window-option -g window-status-current-fg 'magenta'
